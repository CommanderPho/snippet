{
  "name": "snippet",
  "displayName": "Snippet",
  "description": "Extension for creating code and managing user defined code snippets",
  "license": "SEE LICENSE IN LICENSE.md",
  "version": "0.0.1",
  "publisher": "devonray",
  "icon": "resources/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/devon2018/snippet"
  },
  "extensionKind": [
    "workspace",
    "ui"
  ],
  "galleryBanner": {
    "color": "#1289B9",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Snippets",
    "Extension Packs",
    "Other"
  ],
  "keywords": [
    "Snippets",
    "Snippet",
    "Snipp",
    "Sharing"
  ],
  "activationEvents": [
    "onCommand:extension.createSnipp",
    "onCommand:extension.searchSnipps",
    "onCommand:extension.insertSnipp",
    "onCommand:extension.importSnipps",
    "onCommand:extension.refreshEntry",
    "onCommand:extension.importSnipps",
    "onCommand:extension.addEntry",
    "onCommand:extension.editEntry",
    "onCommand:extension.deleteEntry",
    "onCommand:extension.insertEntry",
    "onView:allSnipps"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "commandPalette": [
        {
          "command": "extension.createSnipp",
          "when": "editorHasSelection"
        }
      ],
      "editor/context": [
        {
          "command": "extension.createSnipp",
          "when": "editorHasSelection",
          "group": "snippit"
        },
        {
          "command": "extension.insertSnipp",
          "group": "snippit",
          "title": "Insert Snipp"
        }
      ],
      "view/item/context": [
        {
          "command": "allSnipps.deleteEntry",
          "group": "snippit"
        },
        {
          "command": "allSnipps.insertEntry",
          "group": "snippit"
        }
      ],
      "view/title": [
        {
          "command": "allSnipps.refreshEntry",
          "group": "navigation"
        },
        {
          "command": "extension.searchSnipps",
          "group": "navigation"
        },
        {
          "command": "extension.importSnipps",
          "group": "navigation",
          "when": "false"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.searchSnipps",
        "group": "snippit",
        "title": "Search Snipps",
        "icon": {
          "light": "resources/icons/search.svg",
          "dark": "resources/icons/search.svg"
        }
      },
      {
        "command": "extension.insertSnipp",
        "group": "snippit",
        "title": "Insert Snipp"
      },
      {
        "command": "extension.importSnipps",
        "group": "snippit",
        "title": "Import snipps",
        "icon": {
          "light": "resources/icons/import-snipps.svg",
          "dark": "resources/icons/import-snipps.svg"
        }
      },
      {
        "command": "extension.createSnipp",
        "title": "Create Snip",
        "group": "snippit"
      },
      {
        "command": "allSnipps.refreshEntry",
        "title": "Refresh",
        "icon": {
          "light": "resources/icons/refresh.svg",
          "dark": "resources/icons/refresh.svg"
        }
      },
      {
        "command": "allSnipps.addEntry",
        "title": "Add"
      },
      {
        "command": "allSnipps.editEntry",
        "title": "Edit"
      },
      {
        "command": "allSnipps.deleteEntry",
        "title": "Delete"
      },
      {
        "command": "allSnipps.insertEntry",
        "title": "Insert"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "snippView",
          "title": "Snipps",
          "icon": "resources/icons/logo-light.svg"
        }
      ]
    },
    "views": {
      "snippView": [
        {
          "id": "allSnipps",
          "name": "All"
        }
      ]
    }
  },
  "homepage": "https://snippet.devonray.net",
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.42.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.0.1",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "axios": "^0.19.2"
  }
}
