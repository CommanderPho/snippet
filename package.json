{
  "name": "snipp",
  "displayName": "Snipp",
  "description": "Extension for creating code snippets and uploading to the snipp.app website",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.42.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*",
    "onCommand:extension.createSnipp",
    "onView:allSnipps"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "commandPalette": [
        {
          "command": "extension.createSnipp",
          "when": "editorHasSelection"
        }
      ],
      "editor/context": [
        {
          "command": "extension.createSnipp",
          "when": "editorHasSelection",
          "group": "snippit"
        }
      ],
      "view/item/context": [
      	{
          "command": "allSnipps.deleteEntry",
          "group": "snippit"
        },
        {
          "command": "allSnipps.insertEntry",
          "group": "snippit"
        }
      ],
      "view/title": [
				{
					"command": "allSnipps.refreshEntry",
					"when": "view == allSnipps",
					"group": "navigation"
        },
        {
					"command": "allSnipps.searchSnipps",
					"when": "view == allSnipps",
          "group": "navigation"
				}
			]
    },
    "commands": [
      {
        "command": "allSnipps.searchSnipps",
        "group": "navigation",
        "title": "Search Snipps",
        "icon": {
          "light": "resources/icons/search.svg",
          "dark": "resources/icons/search.svg"
        }
      },
      {
        "command": "extension.createSnipp",
        "title": "Create Snip",
        "group": "snippit"
      },
      {
				"command": "allSnipps.refreshEntry",
				"title": "Refresh"
			},
			{
				"command": "allSnipps.addEntry",
				"title": "Add"
			},
			{
				"command": "allSnipps.editEntry",
				"title": "Edit"
			},
			{
				"command": "allSnipps.deleteEntry",
				"title": "Delete"
      },
      {
				"command": "allSnipps.insertEntry",
        "title": "Insert"
			}
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "icon": "resources/logo.svg",
          "id": "snippView",
          "title": "Snipp"
        }
      ]
    },
    "views": {
      "snippView": [
        {
          "id": "allSnipps",
          "name": "All Snipps"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run compile",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.1",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.42.0",
    "@typescript-eslint/eslint-plugin": "^2.18.0",
    "@typescript-eslint/parser": "^2.18.0",
    "eslint": "^6.8.0",
    "glob": "^7.1.6",
    "mocha": "^7.0.1",
    "typescript": "^3.7.5",
    "vscode-test": "^1.3.0"
  },
  "dependencies": {
    "axios": "^0.19.2"
  }
}
